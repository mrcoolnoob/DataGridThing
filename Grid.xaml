<UserControl x:Class="CheckboxThing.Grid"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CheckboxThing"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <DataGrid x:Name="SampleDataGrid" AutoGenerateColumns="False">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Column 1" Binding="{Binding Column1}" />
                <DataGridTextColumn Header="Column 2" Binding="{Binding Column2}" />
                <DataGridTextColumn Header="Column 3" Binding="{Binding Column3}" />
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</UserControl>
